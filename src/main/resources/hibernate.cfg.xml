<?xml version="1.0" encoding="UTF-8"?>

<hibernate-configuration>
<session-factory>
<!-- Configuracion de la base de datos -->
<property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
<property name="hibernate.connection.url">jdbc:mysql://127.0.0.1:3306/postrequilibrio</property>
<property name="hibernate.connection.username">root</property>
<property name="hibernate.connection.password">root</property>
<property name="hibernate.show_sql">true</property>
<property name="hibernate.hbm2ddl.auto">update</property>

 <!-- Registro de las clases anotadas -->
<mapping class="model.Usuario"/>
<mapping class="model.Ingrediente"/>
<mapping class="model.Receta"/>
<mapping class="model.RecetaIngrediente"/>
<mapping class="model.Valoracion"/>

</session-factory>
</hibernate-configuration>